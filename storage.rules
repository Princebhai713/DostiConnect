rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to user avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      // Allow write only if the user is authenticated and the userId in the path matches their UID.
      // Also, limit the file size to 5MB.
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
    }

    // Deny all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
